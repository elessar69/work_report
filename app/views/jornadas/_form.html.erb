      <h2><%= pluralize(@jornada.errors.count, "error") %> prohibited this jornada from being saved:</h2>

      <ul>
      <% @jornada.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-actions">
<blockquote class="pull-left">
  <p> usuario: </p>
  <small> <%= current_user.username %> </small>
</blockquote>
</div>
    

<html lang="en">
<head>
  <meta charset="utf-8" />
