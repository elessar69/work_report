});
  </script>
</head>




  <div class="row">
    <div class="span3 offset1">
    <label>Usuario</label>
    <% f.label :usuario %>
    <% if current_user.derechos == true then %>
    <%= f.collection_select :usuario_id, Usuario.all, :id, :username, :prompt => 'Selecciona operario' %>
    <% else %> 
    <label><%= current_user.username %></label>
    <%= f.hidden_field :usuario_id, :value => current_user.id %>
     <% end %></div>
    <div class="span3">
    <label>Cliente</label>
    <% f.label :cliente %>
    <%= f.collection_select :cliente_id, Cliente.all, :id, :nombre_cliente, :prompt => "Selecciona el cliente" %></div>
    <div class="span1">
    <center>
    <label>310</label>
    <% f.label :pilar %>
    <%= f.radio_button :pilar, '310' %></div></center>
    <div class="span1">
    <center>
    <label>312</label>
    <% f.label :pilar %>
    <%= f.radio_button :pilar, '312' %></div></center>
    <div class="span3">
    <label>Horas</label>
    <% f.label :horas %>
    <%= f.number_field :horas %></div>
    <div class="span3">
    <label>Incidencia</label>
    <% incidencias = {'Hora Normal' => 'HN', 'Hora Festiva' => 'HF', 'Hora Nocturna Normal' => 'HNN', 'Hora Nocturna Festiva' => 'HNF', 'Baja Enfermedad' => 'BE', 'Baja Accidente' => 'BA', 'Vacaciones' => 'VA', 'Permiso Pagado' => 'PP', 'Ausencia No Justificada' => 'AN', 'Permiso a Descontar' => 'PD' } %>
    <% lista = incidencias %>
    <%= f.select :incidencia, lista %></div>
  </div>

 <div class="row">
    <div class="span3 offset1">
    <label>Fecha</label>
    <% f.label :fecha %>
    <%= f.text_field :fecha %></div>
    <div class="span3">
    <label>Observaciones</label>
    <% f.label :observaciones %>
    <%= f.text_area :observaciones , :rows => "1" %></div>
</div>




<div class="form-actions">
<div class="row">
 <div class="span1 offset1">
 <%= link_to 'Atrás', jornadas_path, :class => "btn" %></div>
 <div class="span1">
 <button class="btn btn-primary" type="submit">Aceptar</button></div>
</div>
</div>

<% end %>
